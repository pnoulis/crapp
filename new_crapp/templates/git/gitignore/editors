#!/usr/bin/env base

editors() {
    debug scaffolding gitignore editors
    
    [ $DRY_RUN ] && {
        ${DATADIR}/git/git.sh --template gitignore/emacs --dry-run
        ${DATADIR}/git/git.sh --template gitignore/vim --dry-run
        ${DATADIR}/git/git.sh --template gitignore/vscode --dry-run
        ${DATADIR}/git/git.sh --template gitignore/intellij --dry-run
        exit 0
    }

    ${DATADIR}/git/git.sh --template gitignore/emacs --dry-run >> \
              ${TEMPDIR}/${FILENAME}
    ${DATADIR}/git/git.sh --template gitignore/vim --dry-run >> \
              ${TEMPDIR}/${FILENAME}
    ${DATADIR}/git/git.sh --template gitignore/vscode --dry-run >> \
              ${TEMPDIR}/${FILENAME}
    ${DATADIR}/git/git.sh --template gitignore/intellij --dry-run >> \
              ${TEMPDIR}/${FILENAME}
}
