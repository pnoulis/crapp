#!/usr/bin/env bash

# export all variables to spawned processes
set -o allexport

# Current location
EXECDIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" 2>/dev/null && pwd)
# Dependencies
GEN_RANDOM_NAME="${EXECDIR}/gname"

main() {
    parse_args "$@"
    set -- "${args[@]}"
    get_pkg_name "$@"
    [[ $# > 0 ]] && shift
    get_pkg_srcdir "$@"
    [[ $# > 0 ]] && shift
    gen_pkg_meta
    if [[ -n "${DEBUG:-}" ]]; then
        echo "debug"

        if [[ -n "${UPDATE:-}" ]]; then
            echo should update
        else
            echo should not update
        fi
        exit
    else
        if [[ -z "${UPDATE:-}" ]]; then
            mkdir "${PKG_SRCDIR}"
            if [[ $? > 0 ]]; then
                die "Failed to create dir ${PKG_SRCDIR}"
            fi
        fi

        cd "${PKG_SRCDIR}"
        init_vite
    fi

    init_vitest
    gen_vite_config
    merge_package_json
    gen_editorconfig
    gen_prettier
    gen_browserslist
    gen_package
    gen_readme
    gen_makefile
    gen_eslint
    gen_gitignore
    gen_gitattributes
    gen_dirs
    install_dotenv
    install_reset_css
    install_tools
    gen_react_skeleton
    make fmt
    make lint
    if [[ $? > 0 ]]; then
        die "FIx linter problems then commit"
    fi
    if [[ -z "${UPDATE:-}" ]]; then
        init_git
    fi
}

gen_react_skeleton() {
    cp "${EXECDIR}/index.html" ./index.html
    cp "${EXECDIR}/main.jsx" ./src
    cp "${EXECDIR}/App.jsx" ./src/app
    cp -r "${EXECDIR}/scratch" ./src/
    cp "${EXECDIR}/routes.jsx" ./src/app
    cp -r "${EXECDIR}/route_home" ./src/app/
    cp "${EXECDIR}/app_index.js" ./src/app/index.js
    cp "${EXECDIR}/index.css" ./public
}

install_tools() {
    npm install --save-prod \
        react-router-dom \
        pino \
        styled-components
    npm install --save-dev pino-pretty
}
install_reset_css() {
    curl https://raw.githubusercontent.com/elad2412/the-new-css-reset/main/css/reset.css > ./public/reset.css
}

install_dotenv() {
    cp "${EXECDIR}/dotenv.sh" ./scripts/dotenv.sh
    chmod +x ./scripts/dotenv.sh
}

gen_dirs() {
    # documentation
    mkdir -p docs/api
    touch ./docs/dev.org
    touch ./docs/api/.gitkeep

    # tests
    mkdir -p tests
    touch ./tests/.gitkeep

    # scripts
    mkdir -p ./scripts
    touch ./scripts/.gitkeep

    # assets
    mkdir -p ./assets/{icons,fonts,brand,backgrounds}
    touch ./assets/{icons,fonts,brand,backgrounds}/.gitkeep

    # tmp
    mkdir -p ./tmp
    touch ./tmp/scratch.js

    # config
    cp -r "${EXECDIR}/config" ./
    touch ./config/env/env.{development,staging,production}
    touch ./config/data/.gitkeep

    # src
    # vite initializes src
    rm -rdf ./src 2>/dev/null
    mkdir -p ./src/{app,services,components}
    touch ./src/{app,services,components}/.gitkeep
    touch ./src/main.jsx

    # public
    rm -rdf ./public 2>/dev/null
    mkdir ./public
    touch ./public/index.css

    # root
    touch .env.local .env.development.local .env.staging.local .env.production.local
    touch ./configure.js
}

init_vitest() {
    npm install --save-dev vitest
}
gen_vite_config() {
    cat <<EOF > vite.config.js
/// <reference types="vitest" />
import { defineConfig } from "vite";
import { configDefaults } from "vitest/config";
import react from "@vitejs/plugin-react";
import svgr from 'vite-plugin-svgr';

// https:vitejs.dev/config/
export default defineConfig({
  plugins: [react(), svgr()],
  build: {
    outDir: "build",
    target: "esnext",
  },
  test: {
    // ...
    include: [
      ...configDefaults.include,
      "tests.{js,mjs,cjs,ts,mts,cts,jsx,tsx}",
    ],
  },
});
EOF
}
init_git() {
    git init
    git add .
    git commit -m 'Initial commit'
}
gen_gitignore() {
    cp "${EXECDIR}/gitignore" ./.gitignore
}

gen_gitattributes() {
 cat <<EOF > .gitattributes
* text=auto eol=lf
EOF
}

gen_makefile() {
    cp "${EXECDIR}/Makefile" ./Makefile
}

