# -*- mode: shell-script -*-
#!/bin/bash

declare -gr SCRIPTDIR="$(dirname -- "$(realpath -- "${BASH_SOURCE[0]}")")"
declare -gr srcdir="$SCRIPTDIR"
cd "${srcdir}" &>/dev/null

# Hoisting for readability purposes
main () {
    alias crapp="$(realpath "${srcdir}/src/crapp.bash")"
    alias crapp
}

# Utils
# --------------------------------------------------

# Program start
# --------------------------------------------------
main
